<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/nav_header.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.HomeActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/drprofile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/profile_image_description"
            android:paddingTop="10dp"
            android:src="@drawable/doctor_avatar"
            app:circleCrop="true" />

        <ImageButton
            android:id="@+id/drupload_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onDrUploadIconClick"
            android:clickable="true"
            android:src="@drawable/baseline_add_a_photo_24" />
    </FrameLayout>

    <TextView
        android:id="@+id/drfull_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drdesignation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

