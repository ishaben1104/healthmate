<?xml version="1.0" encoding="utf-8"?><shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="#FFB6C1" /> <!-- Background color (Light pastel pink) -->
    <size
        android:width="120dp"
        android:height="120dp" /> <!-- Adjust the size as needed -->
    <corners android:radius="60dp" /> <!-- Half of the width/height to make it circular -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" /> <!-- Padding for shadow effect -->

    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Stroke for border, adjust as needed -->

    <gradient
        android:startColor="#FFC1CC"
    android:endColor="#FFC1CC"
    android:angle="270" /> <!-- Gradient angle for shadow effect -->
</shape>
