<?xml version="1.0" encoding="utf-8"?>
<!-- tab_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#abb8c3" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#b3d2e5" />
                    <stroke android:color="#b3d2e5"
                        android:width="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#b3e0e5" />
        </shape>
    </item>
</selector>
